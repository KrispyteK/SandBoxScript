
fn Average (numberArray) {
	total = 0
	average = 0

	for (i = 0, i < numberArray.Length, i++) {
		total = total + numberArray[i]
	}

	average = total / numberArray.Length

	return average
}

fn Sort (numberArray) {
	temp = 0

	for (i = 0, i < numberArray.Length, i++) {
		for (j = i + 1, j < numberArray.Length, j++) {
			if (numberArray[i] > numberArray[j]) {
				temp = numberArray[i]
				numberArray[i] = numberArray[j]
				numberArray[j] = temp 
			}
		}
	}
}

numberArray = []

print("Please enter up to 20 integers, or end input with an empty string.")

in = input()

while (in != "") {
	try { 
		numberArray.Push(Number.ParseInt(in))
	} catch (err) {
		print("User input datatype invalid, please only enter integers.")
	}

	in = input()
}

print("Numbers entered:")
print(numberArray)

Sort(numberArray)

print("\nSorted:")
print(numberArray)

average = Average(numberArray)
print("\nAverage:\n" + average)

print("Lowest input value: " + numberArray[0])
print("Highest input value: " + numberArray[numberArray.Length - 1])
