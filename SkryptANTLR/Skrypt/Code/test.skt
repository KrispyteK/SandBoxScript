
fn Average (numberArray) {
	total = 0
	average = 0

	for (i = 0, i < numberArray.Length, i++) {
		total = total + numberArray[i]
	}

	average = total / numberArray.Length

	return average
}

fn Sort (numberArray) {
	temp = 0

	for (i = 0, i < numberArray.Length, i++) {
		for (j = i + 1, j < numberArray.Length, j++) {
			if (numberArray[i] > numberArray[j]) {
				temp = numberArray[i]
				numberArray[i] = numberArray[j]
				numberArray[j] = temp 
			}
		}
	}
}

